
<h1>Tests Made</h1>
<br/>
<table  id="tests" class="table table-striped ">
  <thead class="thead-dark">
    <tr>
      <th scope="col">First name:</th>
      <th scope="col">Last name:</th>
      <th scope="col">Email:</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @tests.each do |test| %>
    <tr>
      <td><%= test.first_name %></td>
      <td><%= test.last_name %></td>
      <td><%= test.email %></td>
      <td><%= link_to "View test", test, class:"btn btn-success" %></td>
      <td><%= link_to "Edit test", edit_test_path(test), class:"btn btn-dark " %></td>
      <td><%= button_to "Delete test", test, method: :delete, class:"btn btn-primary"%></td>
    </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "New test", new_test_path, class:"btn btn-primary" %>

